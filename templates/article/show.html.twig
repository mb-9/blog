{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>DatetimeCreated</th>
                <td>{{ article.datetimeCreated ? article.datetimeCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ article.content }}</td>
            </tr>
        </tbody>
    </table>

     <table class="table">
        <thead>
            <tr>
                <th>email</th>
                <th>comment</th>
                <th>date</th>

               
            </tr>
        </thead>
        <tbody>
        {% for comment in article.articleComments %}
            <tr>
                <td>{{ comment.idUser.email }}</td>
                <td>{{ comment.message }}</td>
                <td>{{ comment.datetimeCreated |format_datetime()  }}</td>
            </tr>
        {% else %}

            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}


        </tbody>
    </table>

    <a href="{{ path('app_article_index') }}">back to list</a>

    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
